<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <title><%= @page_title ? @page_title + ' | Tickets' : 'Tickets'  %></title>
    <link rel="shortcut icon" href="/icon.png" />
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body data-scrollbar-auto-hide="n" class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <%= render "base/header" %>
      <%= render "base/sidebar" %>
      <div class="content-wrapper">
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1 class="m-0 text-dark"><%= yield :title %></h1>
              </div>

              <div class="col-sm-6">
                <ol class="breadcrumb breadcrumb float-sm-right">
                  <%= render_breadcrumbs :tag => :li, :separator => " | " %>
                </ol>
              </div><!-- /.col -->
            </div><!-- /.row -->
          </div><!-- /.container-fluid -->
        </div>

        <div class="content container-fluid">
          <div class="container-fluid">
            <%= yield %>
            <%= render 'peek/bar' %>
          </div>
        </div>
      </div>
      <%= render "base/footer" %>
      <%= render "base/control_sidebar" %>
      
    </div>
  </body>
</html>
